<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="609.0" prefWidth="858.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.orm_courseworks.controller.PatientHistoryControlller">

    <BorderPane>
        <top>
            <AnchorPane prefHeight="70.0" prefWidth="858.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
                <children>
                    <Label layoutX="22.0" layoutY="5.0" text="Patient History">
                        <font>
                            <Font name="Monotype Corsiva" size="46.0" />
                        </font>
                  <effect>
                     <Glow />
                  </effect>
                    </Label>
                    <HBox alignment="CENTER_RIGHT" layoutX="489.0" layoutY="20.0" prefHeight="30.0" prefWidth="296.0" spacing="10.0">
                        <children>
                            <ComboBox fx:id="cmbPatientId" onAction="#cmbPatientId" prefHeight="26.0" prefWidth="166.0" promptText="Select Patient Id" styleClass="combobox" />
                            <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#searchPatient" style="-fx-background-color: blue; -fx-border-color: white;" styleClass="action-button" text="Search" textFill="WHITE" />
                        </children>
                    </HBox>
                </children>
            </AnchorPane>
        </top>
        <center>
            <VBox prefHeight="468.0" prefWidth="858.0" spacing="15.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                <children>
                    <AnchorPane prefHeight="110.0" prefWidth="770.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <children>
                            <Label layoutX="14.0" layoutY="14.0" text="Patient Details" textFill="#3498db">
                                <font>
                                    <Font name="System Bold" size="16.0" />
                                </font>
                            </Label>
                            <Label layoutX="14.0" layoutY="57.0" text="Name:" />
                            <Label fx:id="lblPatientName" layoutX="69.0" layoutY="56.0" prefHeight="18.0" prefWidth="175.0" text="--" />
                            <Label layoutX="276.0" layoutY="56.0" text="Contact:" />
                            <Label fx:id="lblContactNumber" layoutX="336.0" layoutY="55.0" prefHeight="18.0" prefWidth="173.0" text="--" />
                            <Label layoutX="535.0" layoutY="55.0" text="Reg. Date:" />
                            <Label fx:id="lblRegistrationDate" layoutX="606.0" layoutY="54.0" prefHeight="18.0" prefWidth="155.0" text="--" />
                        </children>
                    </AnchorPane>
                    <Label text="Therapy Programs" textFill="#3498db">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <TableView fx:id="tblTherapyPrograms" prefHeight="273.0" prefWidth="828.0">
                        <columns>
                            <TableColumn fx:id="colProgramId" prefWidth="90.0" text="Program ID" />
                            <TableColumn fx:id="colProgramName" prefWidth="156.80001831054688" text="Program Name" />
                            <TableColumn fx:id="colTherapistName" prefWidth="121.59996032714844" text="Therapist Name" />
                            <TableColumn fx:id="colFee" prefWidth="124.79998779296875" text="Fee (LKR)" />
                            <TableColumn fx:id="colRemainAmount" prefWidth="126.39996337890625" text="Remaining Amount" />
                            <TableColumn fx:id="colPaymentDate" prefWidth="128.79998779296875" text="Payment Date" />
                        </columns>
                    </TableView>
                </children>
            </VBox>
        </center>
    </BorderPane>

</AnchorPane>
